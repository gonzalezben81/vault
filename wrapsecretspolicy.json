# Allow creating and reading wrapped secrets
path "sys/wrapping/wrap" {
  capabilities = ["update"]
}

# Allow looking up and rewrapping wrapped secrets
path "sys/wrapping/lookup" {
  capabilities = ["update"]
}

path "sys/wrapping/rewrap" {
  capabilities = ["update"]
}

# Allow Unwrapping secrets
path "sys/wrapping/unwrap" {
  capabilities = ["update"]
}
